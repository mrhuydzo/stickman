<script type="text/javascript">
    var tooltipTriggerList = [].slice.call(document.getElementsByClassName('milestone_item'))

    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl,index) {
        let ide = `milestone_item__template${index}`
        var tooltipTriggerTemplate = document.getElementById(ide)
        return new bootstrap.Tooltip(tooltipTriggerEl, {
                customClass: 'milestone_wrapper',
                placement: 'right',
                html: true,
                trigger: 'hover',
                title: tooltipTriggerTemplate
            }
        )
    })

    var myModal = new bootstrap.Modal(document.getElementById("modal_play_now"), {});
    document.onreadystatechange = function () {
        myModal.show();
    };
